<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="rs.elfak.got.geopuzzle.SearchForFriendsActivity"
    android:showDividers="beginning">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/buttonDiscoverDevices"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Discover New Devices"
            android:onClick="discover"

            android:background="@drawable/buttonshape"
            android:shadowColor="#1B29A8"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/buttonList"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="List Paired devices"
            android:onClick="list"

            android:background="@drawable/buttonshape"
            android:shadowColor="#1B29A8"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/textViewPairedDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paired devices:"
            android:textColor="#068fff"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            />

        <ListView
            android:id="@+id/userListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Friend Request"
            android:onClick="send"
            android:enabled="false"

            android:background="@drawable/buttonshape"
            android:shadowColor="#1B29A8"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Friend Request"
            android:onClick="acceptFriendRequest"
            android:enabled="false"

            android:background="@drawable/buttonshape"
            android:shadowColor="#1B29A8"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/buttonDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline Friend Request"
            android:onClick="declineFriendRequest"
            android:enabled="false"

            android:background="@drawable/buttonshape"
            android:shadowColor="#1B29A8"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/textViewPendingFriendRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Requests:"
            android:textColor="#068fff"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            />

        <ListView
            android:id="@+id/listViewPendingFriendRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </ListView>

    </LinearLayout>


</LinearLayout>
