<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ><!--android:background="@drawable/android"-->

    <TextView android:text="Registration successful!"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView android:text="Your Registration Details:"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:typeface="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="First Name:"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/firstNameText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:inputType="none"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Last Name:"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/lastNameText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:inputType="none"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Email:"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/emailText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:inputType="none"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Username:"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/usernameText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:inputType="none"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Phone number:"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/phoneNumberText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:inputType="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Registred at:"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/registredAtText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:inputType="none"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <Button
            android:id="@+id/goToLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Go to Login"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>