<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.elfak.got.geopuzzle.RegisteredActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/registration_details"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:typeface="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="25dp">

                <TextView
                    android:text="@string/first_name"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/firstNameText"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:inputType="none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="25dp">

                <TextView
                    android:text="@string/last_name"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/lastNameText"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:inputType="none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="25dp">

                <TextView
                    android:text="@string/email"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView android:id="@+id/emailText"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:inputType="none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="25dp">

                <TextView
                    android:text="@string/username"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:inputType="none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="25dp">

                <TextView
                    android:text="@string/phone_number"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/phoneNumberText"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:inputType="none" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="25dp">

                <TextView android:text="@string/registred_at"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView android:id="@+id/registredAtText"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:inputType="none"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <Button
                    android:id="@+id/goToLoginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_login"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>