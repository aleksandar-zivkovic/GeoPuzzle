<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rs.elfak.got.geopuzzle.HomeActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/geopuzzle"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <Button
            android:id="@+id/myProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/my_profile"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center"/>

        <Button
            android:id="@+id/showMapBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/show_map"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center"/>

        <Button
            android:id="@+id/uploadPuzzleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/title_activity_create_puzzle"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center"/>

        <Button
            android:id="@+id/geoPuzzleServiceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="GeoPuzzle Service"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center"/>

        <Button
            android:id="@+id/leaderBoardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/leaderboard"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center"/>

    </LinearLayout>
</LinearLayout>
