<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    ><!--android:background="@drawable/android"-->

    <TextView android:text="Welcome to GeoPuzzle"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView android:text="Enter your credentials to login:"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:typeface="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Email"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/emailEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:hint="Enter email"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Password"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/passwordEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:hint="Enter password"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/keepLoggedInChk"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Keep me logged in"
        android:gravity="center_vertical|center"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="Login"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center"/>

    <Button
        android:id="@+id/resetPasswordBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="Reset password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <TextView android:text="You dont have account?"
            android:layout_height="35dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="Register here"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical|center"/>
    </LinearLayout>

</LinearLayout>