<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ><!--android:background="@drawable/android"-->

    <TextView android:text="Register to GeoPuzzle"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <TextView android:text="Please fill form to register:"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:typeface="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="First Name"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/firstNameEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Enter firstname"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Last Name"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/lastNameEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Enter lastname"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Email"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/emailEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:hint="Enter email"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Username"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/usernameEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Enter username"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Password"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/passwordEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:hint="Enter password"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Confirm password"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/confirmPasswordEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:hint="Confirm password"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="25dp">

        <TextView android:text="Phone number"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"/>

        <EditText android:id="@+id/phoneNumberEdit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:inputType="number"
            android:hint="Enter phone number"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <Button
            android:id="@+id/uploadPhotoBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Upload photo"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Register"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cancel"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>